@using Genshin_Trade_Center.Models
@model AccountViewModel
@{
    ViewBag.Title = "Log in";
}


<main aria-labelledby="title">
    <div class="container-main">
        <hr />
        <div class="container-body" id="sekcja1">
            <div class="flexbox">
                <div class="item">
                    <h2 id="title">@ViewBag.Title.</h2>
                    <div class="login">
                        <div class="row">
                            <div class="col-md-8">
                                <section id="loginForm">
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl, Submit = "Log in"}, FormMethod.Post, new { id = "form_login" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="row">
                                            @Html.LabelFor(m => m.LoginViewModel.UserName, new { @class = "col-md-2 col-form-label" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(m => m.LoginViewModel.UserName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.LoginViewModel.UserName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            @Html.LabelFor(m => m.LoginViewModel.Password, new { @class = "col-md-2 col-form-label" })
                                            <div class="col-md-10">
                                                @Html.PasswordFor(m => m.LoginViewModel.Password, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.LoginViewModel.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="offset-md-2 col-md-10">
                                                <div class="checkbox">
                                                    @Html.CheckBoxFor(m => m.LoginViewModel.RememberMe)
                                                    @Html.LabelFor(m => m.LoginViewModel.RememberMe)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="offset-md-2 col-md-10">
                                                <input type="submit" value="Log in" class="nice-button" />
                                            </div>
                                        </div>
                                    }
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <div class="container-body" id="sekcja2">
                        <h2 id="title">@ViewBag.Title.</h2>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl, Submit = "Register" }, FormMethod.Post, new { id = "form_register" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="row">
                                @Html.LabelFor(m => m.RegisterViewModel.Email, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.RegisterViewModel.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.RegisterViewModel.UserName, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.RegisterViewModel.UserName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.RegisterViewModel.Password, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                @Html.LabelFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="offset-md-2 col-md-10">
                                    <input type="submit" value="Register" class="btn btn-outline-dark" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}