@model IEnumerable<Genshin_Trade_Center.Models.CharacterArchetype>

@{
    ViewBag.Title = "Character Archetypes";
}

<div class="container-main">
    <hr />
    <div class="container-body">
        <div class="table-container">
            <table class="fl-table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WeaponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VisionType)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WeaponType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisionType)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <hr />
</div>
