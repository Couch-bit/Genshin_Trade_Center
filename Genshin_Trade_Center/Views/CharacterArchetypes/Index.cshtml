@model IEnumerable<Genshin_Trade_Center.Models.CharacterArchetype>

@{
    ViewBag.Title = "Index";
}

<div class="container-main">
    <hr />
    <div class="container-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="table-container">
            <table class="fl-table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WeaponType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VisionType)
                    </th>
                    <th>Possible Actions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WeaponType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisionType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <hr />
</div>
